<h1>New Summary</h1>

<h4>THE POST IN QUESTION</h4>
<p>
  <%= @post.body %>
</p>

<%= form_for [@post.topic, @post, @summary] do |f| %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_field :body, rows: 8, class: 'form-control', placeholder: "Enter post summary" %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>

