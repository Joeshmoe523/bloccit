<h1><%= markdown_to_html @post.title %></h1>

<div class-"row">
  <div class="col-md-8">
    <p><%= markdown_to_html @post.body %></p>
  </div>

  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
    <% if Summary.exists?(post_id: @post.id) %>
      <%= link_to "View Summary", topic_post_summary_path(@topic, @post, @summary), class: 'btn btn-success' %>
    <% else %>
      <%= link_to "Add Summary", new_topic_post_summary_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>

</div>
