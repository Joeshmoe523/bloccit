<%= form_for [post, Comment.new], remote: true do |f| %>
  <div class="form-group">
    <%= f.label :comments %>
    <%= f.text_area :body, rows: 3, class: 'form-control', placeholder: "Enter your comment" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>





